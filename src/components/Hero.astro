---
const base = import.meta.env.BASE_URL;
---

<section class="relative overflow-hidden bg-excavation-dark min-h-[75vh] flex items-center justify-center">
  <!-- Background pattern -->
  <div class="absolute inset-0 diagonal-stripes opacity-60"></div>

  <!-- Animated gradient orbs — red + gold -->
  <div class="absolute top-1/4 -left-32 w-96 h-96 bg-excavation-red/10 rounded-full blur-[120px] animate-float"></div>
  <div class="absolute bottom-1/4 -right-32 w-80 h-80 bg-excavation-gold/10 rounded-full blur-[100px] animate-float-delayed"></div>
  <div class="absolute top-2/3 left-1/3 w-64 h-64 bg-excavation-red/5 rounded-full blur-[80px] animate-float-delayed"></div>

  <!-- Dust particles — gold tones -->
  <div class="hero-particles">
    <span style="--x: 10%; --size: 3px; --duration: 14s; --delay: 0s; --color: rgba(240,168,48,0.4);"></span>
    <span style="--x: 20%; --size: 2px; --duration: 18s; --delay: 2s; --color: rgba(240,168,48,0.25);"></span>
    <span style="--x: 35%; --size: 4px; --duration: 12s; --delay: 4s; --color: rgba(217,68,50,0.25);"></span>
    <span style="--x: 50%; --size: 2px; --duration: 20s; --delay: 1s; --color: rgba(240,168,48,0.3);"></span>
    <span style="--x: 65%; --size: 3px; --duration: 15s; --delay: 3s; --color: rgba(217,68,50,0.3);"></span>
    <span style="--x: 78%; --size: 2px; --duration: 17s; --delay: 5s; --color: rgba(240,168,48,0.2);"></span>
    <span style="--x: 88%; --size: 4px; --duration: 13s; --delay: 0.5s; --color: rgba(240,168,48,0.3);"></span>
    <span style="--x: 42%; --size: 3px; --duration: 16s; --delay: 6s; --color: rgba(217,68,50,0.2);"></span>
    <span style="--x: 55%; --size: 2px; --duration: 19s; --delay: 3.5s; --color: rgba(240,168,48,0.25);"></span>
    <span style="--x: 95%; --size: 3px; --duration: 11s; --delay: 1.5s; --color: rgba(217,68,50,0.3);"></span>
  </div>

  <!-- Content -->
  <div class="relative z-10 text-center px-4 sm:px-6 max-w-5xl mx-auto">
    <!-- Logo -->
    <div class="flex justify-center mb-6 md:mb-8 animate-fade-in">
      <div class="bg-white border-2 border-white rounded-xl sm:rounded-2xl px-4 py-3 sm:px-8 sm:py-6">
        <img
          src={`${base}/logo.webp`}
          alt="Excavaciones Moreno"
          class="w-52 sm:w-72 md:w-96 lg:w-[28rem] h-auto drop-shadow-2xl"
        />
      </div>
    </div>

    <!-- Badge -->
    <div class="inline-flex items-center gap-2 bg-excavation-red/10 border border-excavation-red/20 rounded-full px-3 py-1.5 sm:px-5 sm:py-2 mb-6 md:mb-8 animate-fade-in">
      <span class="w-2 h-2 bg-excavation-red rounded-full animate-pulse"></span>
      <span class="font-heading text-xs sm:text-sm tracking-widest uppercase text-excavation-red">Precios desde Enero 2026</span>
    </div>

    <!-- Tagline -->
    <h1 class="font-display text-[clamp(2rem,8vw,6rem)] leading-[0.9] tracking-tight text-white mb-2">
      LISTADO DE
      <span class="text-excavation-red"> PRECIOS</span>
    </h1>

    <!-- Subtitle -->
    <p class="font-heading text-base sm:text-lg md:text-xl text-white tracking-wide mt-3 sm:mt-4 max-w-2xl mx-auto">
      Áridos · Maquinaria · Transportes
    </p>
    <p class="font-body text-xs sm:text-sm text-white/60 mt-2">
      Equipos diseñados para resistir, rendir y superar los desafíos
    </p>

    <!-- Location + Contact -->
    <div class="flex flex-col sm:flex-row flex-wrap items-center justify-center gap-2 sm:gap-4 mt-6 sm:mt-8 text-sm text-white/70 font-body">
      <span class="flex items-center gap-1.5">
        <svg class="w-4 h-4 text-excavation-gold/60" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
        </svg>
        Mérida, Badajoz
      </span>
      <span class="hidden sm:block w-1 h-1 bg-excavation-muted/30 rounded-full"></span>
      <div class="flex items-center gap-3">
        <a href="tel:+34669788392" class="flex items-center gap-1.5 hover:text-excavation-gold transition-colors">
          <svg class="w-4 h-4 text-excavation-gold/60" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
          </svg>
          669 788 392
        </a>
        <span class="w-1 h-1 bg-excavation-muted/30 rounded-full"></span>
        <a href="tel:+34625309277" class="hover:text-excavation-gold transition-colors">
          625 309 277
        </a>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="mt-10 sm:mt-14 animate-bounce">
      <svg class="w-6 h-6 mx-auto text-excavation-red/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </div>
  </div>

  <!-- Bottom fade -->
  <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-excavation-dark to-transparent"></div>
</section>
