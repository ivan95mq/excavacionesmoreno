---
const items = [
  'Arena Fina',
  'Cat 428',
  'Zahorra Artificial',
  'Góndola',
  'Tierra Vegetal',
  'Cat 318',
  'Bolos 30/60',
  'Rulo Compactador',
  'Jabre',
  'Camión Bañera',
];

const duplicated = [...items, ...items];
---

<div class="relative overflow-hidden py-4 bg-excavation-surface/50 border-y border-white/5">
  <div class="flex animate-marquee whitespace-nowrap">
    {duplicated.map((item) => (
      <span class="mx-6 sm:mx-8 font-heading text-xs sm:text-sm tracking-widest uppercase text-white/30 select-none flex items-center gap-3">
        <span class="w-1.5 h-1.5 bg-excavation-red/40 rounded-full shrink-0"></span>
        {item}
      </span>
    ))}
  </div>
</div>
